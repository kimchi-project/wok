VERSION="@PACKAGE_VERSION@"
RELEASE="@PACKAGE_RELEASE@"

if [ ! -f configure ]; then
    echo "Please run this script from the top of the package tree"
    exit 1
fi

for DISTRO in debian ubuntu
do
    TMPDIR=`mktemp -d`
    make DESTDIR=$TMPDIR install-deb
    mv $TMPDIR/DEBIAN/control.$DISTRO $TMPDIR/DEBIAN/control
    dpkg-deb -b $TMPDIR wok-${VERSION}-${RELEASE}.$DISTRO.noarch.deb
    rm -rf $TMPDIR
done
